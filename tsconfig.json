{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,

    "sourceMap": true,
    
    "forceConsistentCasingInFileNames": true,
    "noUncheckedSideEffectImports": true,
  },
  "include": ["src"]
}
